<script>
const sheetURL = https://docs.google.com/spreadsheets/d/e/2PACX-1vQfYMNTbMqEYXlZVOR-g-HfjedGjM0sFE3enqmtiOGcPWxyziXtE1BJv7A5a00Xpc29xcdY2-opiFNh/pubhtml

async function fetchScore() {
    try {
        const response = await fetch(sheetURL);
        const data = await response.text();
        const rows = data.split("\n");
        const cols = rows[1].split(",");

        document.getElementById("team").innerText = cols[0];
        document.getElementById("score").innerText = cols[1];
        document.getElementById("wkts").innerText = cols[2];
        document.getElementById("overs").innerText = cols[3];
    } catch(err){
        console.log("Error fetching data");
    }
}

fetchScore();
setInterval(fetchScore, 8000); // auto refresh every 8 sec
</script>

